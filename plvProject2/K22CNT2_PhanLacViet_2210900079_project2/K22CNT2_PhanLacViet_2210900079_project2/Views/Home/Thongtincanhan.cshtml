@model K22CNT2_PhanLacViet_2210900079_project2.Models.KhachHang

@{
    ViewBag.Title = "Thông tin cá nhân";
}



<table class="table table-bordered" style="width: 33.33%;">
    <thead>
        <tr>
            <td colspan="2" style="text-align: center; font-size: 1.5em; font-weight: bold;background-color:bisque">
                Thông tin cá nhân
            </td>
        </tr>
    </thead>
    <tbody>
        <tr style="background-color: #d1b7a6;">
            <!-- Màu nền cột 1 -->
            <td>Tài khoản:</td>
            <td style="background-color: antiquewhite;">@Model.TaiKhoan</td>
        </tr>
        <tr style="background-color: #d1b7a6;">
            <!-- Màu nền cột 1 -->
            <td>Mật khẩu:</td>
            <td style="background-color: antiquewhite;">@Model.MatKhau</td>
        </tr>
        <tr style="background-color: #d1b7a6;">
            <!-- Màu nền cột 1 -->
            <td>Tên khách hàng:</td>
            <td style="background-color: antiquewhite;">@Model.TenKH</td>
        </tr>
        <tr style="background-color: #d1b7a6;">
            <!-- Màu nền cột 1 -->
            <td>Địa chỉ:</td>
            <td style="background-color: antiquewhite;">@Model.Diachi</td>
        </tr>
        <tr style="background-color: #d1b7a6;">
            <!-- Màu nền cột 1 -->
            <td>Số điện thoại:</td>
            <td style="background-color: antiquewhite;">@Model.SDT</td>
        </tr>
        <tr style="background-color: #d1b7a6;">
            <!-- Màu nền cột 1 -->
            <td>Email:</td>
            <td style="background-color: antiquewhite;">@Model.Email</td>
        </tr>
    </tbody>
</table>

<p>
    <a href="@Url.Action("EditThongtincanhan", new { id = Model.MaKH.Trim() })" class="btn btn-warning">Sửa</a>
    <a href="@Url.Action("Index")" class="btn btn-success">Quay lại</a>
</p>

