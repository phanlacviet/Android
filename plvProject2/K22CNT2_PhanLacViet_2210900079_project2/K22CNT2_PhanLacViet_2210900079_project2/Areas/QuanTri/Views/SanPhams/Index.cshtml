@model IEnumerable<K22CNT2_PhanLacViet_2210900079_project2.Models.SanPham>

@{
    ViewBag.Title = "Index";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<h2>Bảng sản phẩm</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Thêm mới</a>
</p>
<table class="table table-bordered">
    <tr style="background-color: antiquewhite">
        <th>
            <p>Tên sản phẩm</p>
        </th>
        <th>
            <p>Số lượng</p>
        </th>
        <th>
            Giá cả
        </th>
        <th>
            Tên nhà cung cấp
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaCa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCC.TenNCC)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP.Trim() }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSP.Trim() }, new { @class = "btn btn-success" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP.Trim() }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<a href="@Url.Action("Index", "AdminIndex")" class="btn btn-success">Quay lại trang chủ</a>
