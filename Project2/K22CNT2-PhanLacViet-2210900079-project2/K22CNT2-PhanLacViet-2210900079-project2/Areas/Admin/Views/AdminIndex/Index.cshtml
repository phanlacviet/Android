@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Trang Quản trị Admin</h2>

<div class="container">
    <div class="line"></div>

    <div class="row">

        <div class="col-md-4 text-center">           
            <div class="chuc_nang">
                @Html.ActionLink("Khách Hàng", "Index", "PLVKhachHangs", null, new { @class = "link" })
            </div>
        </div>

        <div class="col-md-4 text-center">
            
            <div class="chuc_nang">
                @Html.ActionLink("Sản Phẩm", "Index", "PLVSanPhams", null, new { @class = "link" })
            </div>
        </div>

        <div class="col-md-4 text-center">
            
            <div class="chuc_nang">
                @Html.ActionLink("Nhà Cung Cấp", "Index", "PLVNhaCCs", null, new { @class = "link" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 text-center">
            
            <div class="chuc_nang">
                @Html.ActionLink("Đơn Hàng", "Index", "PLVDonHangs", null, new { @class = "link" })
            </div>
        </div>

        <div class="col-md-4 text-center">
            
            <div class="chuc_nang">
                @Html.ActionLink("Chi Tiết Đơn Hàng", "Index", "CTDHs", null, new { @class = "link" })
            </div>
        </div>
    </div>
</div>

<!-- CSS Style -->
<style>

    .line {
        border-top: 2px solid black;
        width: 100%;
        margin: 10px 0;
    }

    .chuc_nang {
        background-color: antiquewhite;
        border: 1px solid black;
        height: 80px; 
        border-radius: 60px; 
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        margin: 10px 0;
        transition: background-color 0.3s;
    }

        .chuc_nang:hover {
            background-color: #d2b48c;
        }

    .link {
        text-decoration: none;
        color: black; 
        font-weight: bold;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24pt;
    }

        .link:hover {
            color: white; 
        }
</style>  