@model IEnumerable<K22CNT2_PhanLacViet_2210900079_project2.Models.NhaCC>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Bảng nhà cung cấp</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Thêm mới</a>
</p>
<table class="table table-bordered">
    <tr style="background-color: antiquewhite">
        <th>
            @Html.DisplayNameFor(model => model.TenNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNCC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaNCC.Trim() }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaNCC.Trim() }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaNCC.Trim() }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<a href="@Url.Action("Index", "AdminIndex")" class="btn btn-success">Quay lại trang chủ</a>
